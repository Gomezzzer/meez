<!-- app/views/shared/_chart_partial.html.erb -->
<div class="chart-container">
  <%= column_chart @chart_data, 
        colors: ["#733FC8", "#FF073A", "#cec5c5", "#FF6FFF", "#FFD700"], 
        width: "300px", 
        height: "300px",
        library: {
          chart: {
            backgroundColor: '#2b2b2b',  # Dark background
            style: {
              fontFamily: 'Arial, sans-serif'
            }
          },
          title: {
            style: {
              color: '#ffffff'  # White text for the title
            }
          },
          xAxis: {
            labels: {
              style: {
                color: '#ffffff'  # White text for x-axis labels
              }
            },
            title: {
              style: {
                color: '#ffffff'  # White text for x-axis title
              }
            }
          },
          yAxis: {
            labels: {
              style: {
                color: '#ffffff'  # White text for y-axis labels
              }
            },
            title: {
              style: {
                color: '#ffffff'  # White text for y-axis title
              }
            }
          },
          legend: {
            itemStyle: {
              color: '#ffffff'  # White text for legend
            }
          }
        } %>
</div>
