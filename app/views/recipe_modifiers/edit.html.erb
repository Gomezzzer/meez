<div class="mt-4 mb-3">
  <h1>Editing Recipe Modifier</h1>
  <hr>
  <div class="mt-5 shadow p-3 mb-5 bg-body-tertiary rounded w-md-50 mx-auto">
    <div class="card-header">
      <%= render "form", recipe_modifier: @recipe_modifier %>
      
      <% if @recipe_modifier.image.url %>
        <div class="mt-3 text-center">
          <%= image_tag @recipe_modifier.image.url, class: 'card-img-right img-fluid' %>
        </div>
      <% end %>

      <br>

      <div>
        <%= link_to "Show this recipe", @recipe_modifier, class: "btn custom-outline-btn" %> |
        <%= link_to "Back to recipes", recipe_modifiers_path, class: "btn custom-outline-btn" %>
      </div>
    </div>
  </div>
</div>

<hr>
