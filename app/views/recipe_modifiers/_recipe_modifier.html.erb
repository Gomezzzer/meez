<div id="<%= dom_id recipe_modifier %>">
  

<div class="card text-center">
  <div class="card-header">
   <p>
    <strong>Name:</strong>
    <%= recipe_modifier.name %>
  </p>
  </div>
  <div class="card-body">
    <h5 class="card-title"><strong>Description:</strong>
    <%= recipe_modifier.description %></h5>
    <p class="card-text"><strong>Recipe:</strong>
    <%= recipe_modifier.recipe %>.</p>
     <p class="card-text"><strong>Measurements:</strong>
    <%= recipe_modifier.measurements %>.</p>
